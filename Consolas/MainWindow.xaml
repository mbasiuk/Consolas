<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:t="clr-namespace:System.Threading.Tasks;assembly=System.Core"
        xmlns:t1="clr-namespace:System.Threading.Tasks;assembly=mscorlib"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Consolas" 
        mc:Ignorable="d"
        x:Class="Consolas.MainWindow"
        Title="MainWindow"        
        d:DataContext="{d:DesignData /SampleData/CommandCollectionSampleData.xaml}" DataContext="{DynamicResource TestCollection}">
    
    <Grid>
        <ListBox Margin="10" ItemsSource="{Binding}" ItemTemplate="{DynamicResource DataTemplate1}" DataContext="{Binding Mode=OneWay}" ItemsPanel="{DynamicResource ItemsPanelTemplate1}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>
</Window>
